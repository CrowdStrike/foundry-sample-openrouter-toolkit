{
  "components": {
    "securitySchemes": {
      "apiKey": {
        "in": "header",
        "name": "api-key",
        "type": "apiKey"
      }
    }
  },
  "info": {
    "contact": {
      "email": "nathan.labadie@crowdstrike.com"
    },
    "description": "Integration with the Azure AI API.",
    "title": "Azure AI API",
    "version": ""
  },
  "openapi": "3.0.3",
  "paths": {
    "/openai/deployments/{deployment_id}/chat/completions": {
      "post": {
        "description": "Creates a completion for the chat message",
        "operationId": "Azure AI Chat Completion",
        "parameters": [
          {
            "in": "path",
            "name": "deployment_id",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "in": "query",
            "name": "api-version",
            "required": true,
            "schema": {
              "default": "2025-01-01-preview",
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "properties": {
                  "messages": {
                    "description": "List of messages comprising the conversation.",
                    "items": {
                      "properties": {
                        "content": {
                          "description": "Content of the message.",
                          "title": "Content",
                          "type": "string"
                        },
                        "role": {
                          "default": "user",
                          "description": "Role of the message sender. ",
                          "title": "Role",
                          "type": "string"
                        }
                      },
                      "required": [
                        "content"
                      ],
                      "title": "Messages",
                      "type": "object"
                    },
                    "type": "array"
                  },
                  "temperature": {
                    "default": 1.0,
                    "description": "Sampling temperature.",
                    "type": "number"
                  }
                },
                "required": [
                  "messages"
                ],
                "title": "Json",
                "type": "object"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "content": {
              "application/json": {
                "schema": {
                  "properties": {
                    "choices": {
                      "description": "Array of completion choices",
                      "items": {
                        "properties": {
                          "finish_reason": {
                            "description": "Reason why the completion finished",
                            "enum": [
                              "stop",
                              "length",
                              "content_filter"
                            ],
                            "type": "string"
                          },
                          "index": {
                            "description": "Index of this completion choice",
                            "type": "integer"
                          },
                          "message": {
                            "properties": {
                              "content": {
                                "description": "Content of the message",
                                "type": "string"
                              },
                              "role": {
                                "description": "Role of the message sender",
                                "example": "assistant",
                                "type": "string"
                              }
                            },
                            "type": "object"
                          }
                        },
                        "type": "object"
                      },
                      "type": "array"
                    },
                    "created": {
                      "description": "Unix timestamp of when the completion was created",
                      "type": "integer"
                    },
                    "id": {
                      "description": "Unique identifier for the completion",
                      "type": "string"
                    },
                    "model": {
                      "description": "Model used for the completion",
                      "type": "string"
                    },
                    "object": {
                      "description": "Type of object returned",
                      "example": "chat.completion",
                      "type": "string"
                    },
                    "usage": {
                      "description": "Token usage statistics",
                      "properties": {
                        "completion_tokens": {
                          "description": "Number of tokens in the completion",
                          "type": "integer"
                        },
                        "prompt_tokens": {
                          "description": "Number of tokens in the prompt",
                          "type": "integer"
                        },
                        "total_tokens": {
                          "description": "Total number of tokens used",
                          "type": "integer"
                        }
                      },
                      "type": "object"
                    }
                  },
                  "type": "object"
                }
              }
            },
            "description": "Successful response"
          },
          "400": {
            "content": {
              "application/json": {
                "schema": {
                  "properties": {
                    "error": {
                      "description": "Error message",
                      "type": "object"
                    }
                  },
                  "type": "object"
                }
              }
            },
            "description": "Bad request"
          },
          "401": {
            "content": {
              "application/json": {
                "schema": {
                  "properties": {
                    "error": {
                      "description": "Authentication error message",
                      "type": "object"
                    }
                  },
                  "type": "object"
                }
              }
            },
            "description": "Unauthorized"
          }
        },
        "x-cs-operation-config": {
          "timeout_seconds": 60,
          "workflow": {
            "description": "Send queries to Azure AI",
            "expose_to_workflow": true,
            "name": "Azure AI Chat Completion",
            "system": false,
            "tags": [
              "Azure AI"
            ]
          }
        }
      }
    }
  },
  "security": [
    {
      "apiKey": []
    }
  ],
  "servers": [
    {
      "url": "https://ad-jo-mg8x3t2p-eastus2.cognitiveservices.azure.com"
    }
  ],
  "x-cs-multi-instance": true
}
